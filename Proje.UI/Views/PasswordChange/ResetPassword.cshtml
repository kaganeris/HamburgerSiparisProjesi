@using Proje.BLL.Models.VMs;
@model ResetPasswordVM
@{
    ViewData["Title"] = "ResetPassword";
}

<div class="container-xxl py-5 bg-dark  mb-5">
    <div class="container text-center my-5 pt-5 pb-4">
        <h1 class="display-3 text-white mb-3 animated slideInDown">Şifreni Yenile</h1>
        <div class="bg-danger text-white">@ViewBag.Uyarı</div>
        <form method="post">
            <div asp-validation-summary="All" class="bg-danger text-white"></div>
            <div class="form-group">
                <label>Şifrenizi Giriniz</label>
                <input type="text" class="form-control" asp-for="Password" />
            </div>
            <div class="form-group">
                <label>Şifrenizi Tekrar Giriniz</label>
                <input type="text" class="form-control" asp-for="ConfirmPassword" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Şifreyi Güncelle" />
            </div>
        </form>
    </div>
</div>

